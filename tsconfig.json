{
    "compilerOptions": { 
      "target": "es2017",  
      "experimentalDecorators": true,
      "module": "commonjs",  
      "lib": [ 
        "dom",  
        "es2017"  
      ],  
      "sourceMap": true, 
      "outDir": "./build", 
      "removeComments": true,  
      "strict": true,  
      "noImplicitAny": true,  
      "strictNullChecks": true,  
      "noImplicitThis": true, 
      "noUnusedLocals": true,  
      "noImplicitReturns": true,  
      "moduleResolution": "node"
    },
    "exclude": [
      "node_modules",
      "build"
    ]
}